/* 引用 */
.wemark_block_blockquote_p {
	margin-top: 20PX;
	padding: 5PX 15PX;
	font-size: 14PX;
	color: #888;
	border-left: 3PX solid #e0e0e0;
	background: #fff;
}

/* 代码块 */
.wemark_block_code {
	margin-top: 20PX;
	padding: 10PX 20PX;
	font-size: 12PX;
	line-height: 20PX;
	white-space: pre;
	overflow: auto;
	background-color: rgb(246, 248, 250);
	border-radius: 5PX;
}

